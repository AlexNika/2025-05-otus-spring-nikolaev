{
  "settings": {
    "index": {
      "max_ngram_diff": 20
    },
    "analysis": {
      "analyzer": {
        "text_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "russian_stop",
            "english_stop",
            "russian_stemmer",
            "english_stemmer",
            "text_ngram_filter"
          ]
        },
        "id_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase",
            "id_ngram_filter"
          ]
        }
      },
      "filter": {
        "russian_stop": {
          "type": "stop",
          "stopwords": "_russian_"
        },
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "russian_stemmer": {
          "type": "stemmer",
          "language": "russian"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        },
        "text_ngram_filter": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 20
        },
        "id_ngram_filter": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 30
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          },
          "ngram": {
            "type": "text",
            "analyzer": "id_ngram_analyzer"
          }
        }
      },
      "productName": {
        "type": "text",
        "analyzer": "text_ngram_analyzer"
      },
      "description": {
        "type": "text",
        "analyzer": "text_ngram_analyzer"
      },
      "companyId": {
        "type": "keyword"
      },
      "price": {
        "type": "double"
      },
      "currency": {
        "type": "keyword"
      },
      "stockQuantity": {
        "type": "double"
      },
      "category": {
        "type": "keyword"
      },
      "manufacturer": {
        "type": "keyword"
      },
      "supplierCode": {
        "type": "keyword"
      },
      "fileProcessedAt": {
        "type": "date"
      }
    }
  }
}